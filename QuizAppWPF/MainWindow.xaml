<Window x:Class="QuizAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizAppWPF"
        mc:Ignorable="d"
        Title="Quiz App" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🧠 Quiz App"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2D89EF"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Question Text -->
        <TextBlock Text="{Binding CurrentQuestion.Text}"
                   FontSize="20"
                   TextWrapping="Wrap"
                   Foreground="#333"
                   Grid.Row="1"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- Options -->
        <ListBox ItemsSource="{Binding CurrentQuestion.Options}"
                 Grid.Row="1"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Width="300"
                 FontSize="16"
                 Margin="0,80,0,20"/>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="⬅ Previous"
                    Width="100"
                    Margin="10"
                    Click="PreviousButton_Click"/>
            <Button Content="Next ➡"
                    Width="100"
                    Margin="10"
                    Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
