<Window x:Class="QuizAppWPF.Views.AddQuestionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Question"
        Height="450" Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F7F9FB">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Add New Question"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Question:"/>
                <TextBox x:Name="QuestionTextBox" Margin="0,5,0,10"/>

                <TextBlock Text="Option A:"/>
                <TextBox x:Name="OptionABox" Margin="0,5,0,10"/>

                <TextBlock Text="Option B:"/>
                <TextBox x:Name="OptionBBox" Margin="0,5,0,10"/>

                <TextBlock Text="Option C:"/>
                <TextBox x:Name="OptionCBox" Margin="0,5,0,10"/>

                <TextBlock Text="Option D:"/>
                <TextBox x:Name="OptionDBox" Margin="0,5,0,10"/>

                <TextBlock Text="Correct Answer (A/B/C/D):"/>
                <TextBox x:Name="CorrectAnswerBox" Margin="0,5,0,10" Width="80"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Width="100" Margin="10,0" Click="Add_Click"
                    Background="#44bd32" Foreground="White" FontWeight="Bold"/>

            <Button Content="Cancel" Width="100" Margin="10,0" Click="Cancel_Click"
                    Background="#e84118" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
