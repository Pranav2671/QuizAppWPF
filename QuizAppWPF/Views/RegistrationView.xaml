<Window x:Class="QuizAppWPF.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register - Quiz App"
        Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F6FA">
    <Grid>
        <Border CornerRadius="12"
                Padding="40"
                Background="White"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#DADFE1"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Create Account"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2F3640"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox" Height="34" Margin="0,0,0,12"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="34" Margin="0,0,0,12"/>

                <TextBlock Text="Confirm Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="34" Margin="0,0,0,18"/>

                <TextBlock Text="Role" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="RoleComboBox" Height="34" Margin="0,0,0,18">
                    <ComboBoxItem Content="User" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>

                <Button Content="Register"
                        Height="40"
                        FontSize="15"
                        Background="#00A8FF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RegisterButton_Click"/>

                <TextBlock Text="Already have an account? Login"
                           HorizontalAlignment="Center"
                           Margin="0,14,0,0"
                           Foreground="#718093"
                           FontSize="13"
                           Cursor="Hand"
                           MouseDown="LoginText_MouseDown"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
