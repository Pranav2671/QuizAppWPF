<Window x:Class="QuizAppWPF.Views.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Dashboard"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>

        <!-- Logout button at top-right -->
        <Button Content="Logout"
                Width="90"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="LogoutButton_Click"
                Background="#e84118"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Centered Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="🎯 User Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="Take Quiz" Width="200" Height="40" Margin="0,5"/>
            <Button Content="View Results" Width="200" Height="40" Margin="0,5"/>
            <Button Content="Profile" Width="200" Height="40" Margin="0,5"/>

        </StackPanel>

    </Grid>
</Window>
