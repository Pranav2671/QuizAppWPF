<Window x:Class="QuizAppWPF.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login - Quiz App"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Center Box -->
        <Border Grid.Row="1"
                CornerRadius="12"
                Padding="40"
                Background="White"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#DADFE1"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="Login"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#2F3640"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           FontWeight="SemiBold"
                           Foreground="#353B48"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Foreground="#353B48"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             FontSize="14"
                             Margin="0,0,0,25"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#00A8FF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click"/>

                <!-- Register Link -->
                <TextBlock Text="Don't have an account? Register"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"
                   Foreground="#718093"
                   FontSize="13"
                   Cursor="Hand"
                   MouseDown="RegisterText_MouseDown"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
