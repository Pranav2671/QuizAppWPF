<Window x:Class="QuizAppWPF.Views.ViewQuizzesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Quizzes"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Grid Margin="10">
        <StackPanel>
            <!-- Header and Button Row -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="📘 All Quizzes"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0" />

                <Button Content="Add Quiz"
                        Width="120"
                        Height="35"
                        Command="{Binding AddQuizCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- DataGrid to Display Quizzes -->
            <DataGrid ItemsSource="{Binding Quizzes}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Height="350">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Topic" Binding="{Binding TopicTitle}" Width="250"/>
                    <DataGridTextColumn Header="Questions" Binding="{Binding QuestionCount}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
