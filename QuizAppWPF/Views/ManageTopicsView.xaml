<Window x:Class="QuizAppWPF.Views.ManageTopicsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Topics"
        Height="450" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Add Topic Section -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="TopicNameBox"
                     Width="300"
                     Height="30"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     ToolTip="Enter topic name here"/>

            <Button Content="Add Topic"
                    Width="100"
                    Height="30"
                    Click="AddTopic_Click"
                    Background="#44bd32"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Topics Table -->
        <DataGrid x:Name="TopicsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  Margin="0,10,0,50"
                  RowBackground="White"
                  AlternatingRowBackground="#f1f2f6"
                  BorderBrush="#dcdde1"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Created At" Width="200">
                    <DataGridTextColumn.Binding>
                        <Binding Path="CreatedAt" StringFormat="{}{0:dd MMM yyyy}"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- View Questions Button -->
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View Questions"
                                    Background="#273c75"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="25"
                                    Padding="5,0"
                                    Margin="3"
                                    Cursor="Hand"
                                    Click="ViewQuestions_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Delete Button -->
        <Button Content="Delete Selected"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Height="35"
                Width="150"
                HorizontalAlignment="Right"
                Click="DeleteTopic_Click"
                Background="#e84118"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>
