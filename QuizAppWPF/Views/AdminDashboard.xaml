<Window x:Class="QuizAppWPF.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Dashboard Title -->
            <TextBlock Text="👑 Admin Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Admin Options -->
            <Button Content="Manage Users" Width="200" Height="40" Margin="0,5"/>
            <Button Content="Manage Quizzes" Width="200" Height="40" Margin="0,5"/>
            <Button Content="View Reports" Width="200" Height="40" Margin="0,5"/>

            <!-- Logout Button -->
            <Button Content="Logout"
                    Width="200" Height="40"
                    Margin="0,15,0,0"
                    Background="#e84118"
                    Foreground="White"
                    Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
