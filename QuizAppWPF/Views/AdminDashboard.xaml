<Window x:Class="QuizAppWPF.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>

        <!-- Logout button -->
        <Button Content="Logout"
                Width="90"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="LogoutButton_Click"
                Background="#e84118"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Center content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="👑 Admin Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="Manage Users"
                    Width="200"
                    Height="40"
                    Margin="0,5"
                    Click="ManageUsers_Click"/>

            <Button Content="Manage Quiz Categories"
                    Width="200"
                    Height="40"
                    Margin="0,5"
                    Click="ManageCategories_Click"/>



            <!-- ✅ Replaced View Reports with Add Quiz -->
            <Button Content="View Quizzes"
                    Width="200"
                    Height="40"
                    Margin="0,5"
                    Click="ViewQuizzes_Click"/>


        </StackPanel>

    </Grid>
</Window>
